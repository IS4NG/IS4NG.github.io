 <!--/ Contents START /-->
 <section id="about" class="about-mf sect-pt4 route">
  <div class="container">
    <a href="/Archive/create" class="btn btn-info btn-outline-primary float-right" role="button">글쓰기</a>
    <br>
    <br>
    <!--검색창-->
    <div class="container input-group mb-2">
      <input class="form-control" id="search-input">
      <button class="input-group-append btn btn-outline-primary" id="search"><i class="fa-solid fa-magnifying-glass"></i></button>
    </div>
    

    <!-- post list using EJS-->
    <section id="about" class="about-mf sect-pt4 route">
      <div class="container">
        <h4>글목록</h4>
        <div class="row">
          <div class="col-sm-12">
            <div class="box-shadow-full">    
                <!-- EJS사용 -->
                  <!-- Posts List -->
                  <div class="news">
                    <ul class="posts">
                      <% for (var i=0; i<글목록.length; i++){ %>
                      <li>
                        <article>
                          <header>
                            <h3><a href = '/Archive/detail/<%= 글목록[i]._id %>'> <%= i+1%>: <%= 글목록[i].title %></a></h3>
                            <time class="published" datetime="2015-10-20"><%= 글목록[i].time %></time>
                          </header>
                          <% if(isAuthenticated){ %>
                            <a href="/Archive/edit/<%= 글목록[i]._id %>" class="btn btn-outline-success" role="button">Edit</a>
                            <button type="submit" class="delete btn btn-danger "  data-id = "<%= 글목록[i]._id %>" >Delete</button> <!--class에 delete-->
                            <script src = "../js/delete.js"></script><!-- Ajax사용 -->
                    
                            <% }%>
                        </article>
                      </li>
                      <% } %>
                    </ul>
                  </div>
                
            </div>
          </div>
        </div>
      </div>
    </section>   

                




  </div>
</section>
  <script src="/js/search.js"></script>

